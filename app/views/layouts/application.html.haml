!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "VisaTechTest"
    = csrf_meta_tags
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "Contacts Manager", root_path, class: "brand"
          .container.nav-collapse
            %ul.nav
              %li= link_to "Add Contact", new_contact_path
            %form.form-search
              %input{type: "text", placeholder: "Search", id: "search", class: "input-medium search-query"}

    .container

      .row
        .span9
          = bootstrap_flash
          = yield

      %footer
        %p &copy; 2013

    = javascript_include_tag "application"
